rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es administrador
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Función para verificar si el usuario está autenticado
    function isAuth() {
      return request.auth != null;
    }

    // Colección de Usuarios
    match /users/{userId} {
      allow read: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuth() && (request.auth.uid == userId || isAdmin());
    }

    // Colecciones de administración (Solo Admin)
    match /productos/{producto} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /establishments/{establishment} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /marcas/{marca} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /medidas/{medida} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /categorias/{categoria} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /customers/{customer} {
      allow read: if isAdmin();
      // Allow anyone (including unauthenticated users) to create a customer record
      allow create: if true;
      // Only admins can update or delete customer records
      allow update, delete: if isAdmin();
    }
    match /sales/{sale} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    match /settings/{setting} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /config/{document} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /my_products/{productId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Colección de Recetas y Escenarios
    match /recipes/{recipe} {
      // Recipes can be read by authenticated users or publicly for store consumption
      allow read: if isAuth() || true;
      allow write: if isAdmin();
    }
    match /scenarios/{scenario} {
      // Allow public read of published scenarios, otherwise require auth
      allow read: if isAuth() || (resource.data.published == true);
      allow write: if isAdmin();
    }
    
    // Orders collection for purchases created from public store
    match /orders/{order} {
      // Only admins can read or modify orders
      allow read: if isAdmin();
      // Allow anyone to create an order (guest checkout)
      allow create: if true;
      // Admins only for update/delete
      allow update, delete: if isAdmin();
    }
  }
}